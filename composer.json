{
    "name": "descom/laravel-auth-spa",
    "description": "Template to generate a Laravel Package",
    "license": "MIT",
    "authors": [
        {
            "name": "Descom Support",
            "email": "soporte@descom.es",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "laravel/framework": "^9.0",
        "laravel/sanctum": "^2.15"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.4",
        "nunomaduro/larastan": "^2.0",
        "orchestra/testbench": "^7.5",
        "phpstan/phpstan": "^1.2",
        "phpunit/phpunit": "^9.3"
    },
    "autoload": {
        "psr-4": {
            "Descom\\AuthSpa\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Descom\\AuthSpa\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Descom\\AuthSpa\\AuthSpaServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
